---
const base = Astro.site?.pathname ?? '/';
const href = (path = '') => `${base}${path}`.replace(/\/+/g, '/');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>My Learning Tracker</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

      :root {
        --bg: #ffffff;
        --muted: #f4f6f8;
        --text: #0b1220;
        --muted-text: #6b7280;
        --accent: #0ea5a5;
        --border: #e5e7eb;
        --max-width: 980px;
      }

      html.dark {
        --bg: #0b1220;
        --muted: #1a2332;
        --text: #f5f5f5;
        --muted-text: #a0a0a0;
        --accent: #00d9d9;
        --border: #2a3a52;
      }

      * {
        box-sizing: border-box;
      }

      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--bg);
        color: var(--text);
      }

      .app {
        display: flex;
        min-height: 100vh;
        background: var(--bg);
      }

      .sidebar {
        width: 220px;
        padding: 28px 20px;
        border-right: 1px solid var(--border);
        background: var(--muted);
        overflow-y: auto;
      }

      .sidebar nav {
        position: sticky;
        top: 0;
      }

      .brand {
        font-size: 20px;
        font-weight: 700;
        margin: 0 0 28px 0;
        color: var(--text);
        letter-spacing: -0.5px;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar li {
        margin: 4px 0;
      }

      .sidebar a {
        display: block;
        padding: 10px 12px;
        color: var(--text);
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
      }

      .sidebar a:hover {
        background-color: rgba(14, 165, 165, 0.1);
        color: var(--accent);
      }

      .content {
        flex: 1;
        padding: 48px 40px;
        max-width: var(--max-width);
        margin: 0 auto;
        overflow-y: auto;
      }

      article {
        line-height: 1.6;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: 32px;
        margin-bottom: 16px;
        font-weight: 700;
        letter-spacing: -0.3px;
      }

      h1 {
        font-size: 36px;
        line-height: 1.2;
        margin-top: 0;
      }

      h2 {
        font-size: 28px;
        line-height: 1.3;
        color: var(--text);
      }

      h3 {
        font-size: 22px;
        line-height: 1.4;
        color: var(--text);
      }

      p {
        font-size: 15px;
        line-height: 1.7;
        color: var(--text);
        margin: 16px 0;
      }

      a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid rgba(14, 165, 165, 0.3);
        transition: all 150ms ease;
      }

      a:hover {
        border-bottom-color: var(--accent);
        background-color: rgba(14, 165, 165, 0.05);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: 24px 0;
        font-size: 14px;
      }

      th, td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid var(--border);
      }

      th {
        background-color: var(--muted);
        font-weight: 600;
      }

      tr:hover {
        background-color: rgba(14, 165, 165, 0.03);
      }

      input[type="checkbox"] {
        cursor: pointer;
        accent-color: var(--accent);
      }

      .theme-toggle {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
        padding: 4px 8px;
        color: var(--text);
        transition: transform 200ms ease;
      }

      .theme-toggle:hover {
        transform: scale(1.1);
      }

      .sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
      }

      blockquote {
        margin: 24px 0;
        padding-left: 20px;
        border-left: 4px solid var(--accent);
        color: var(--muted-text);
        font-style: italic;
      }

      code {
        background: var(--muted);
        padding: 2px 6px;
        border-radius: 4px;
        font-family: 'Monaco', 'Courier New', monospace;
        font-size: 13px;
        color: #d73a49;
      }

      pre {
        background: var(--muted);
        padding: 16px;
        border-radius: 8px;
        overflow-x: auto;
        margin: 24px 0;
      }

      pre code {
        background: none;
        padding: 0;
        color: var(--text);
      }

      ul, ol {
        margin: 16px 0;
        padding-left: 24px;
      }

      li {
        margin: 8px 0;
      }

      hr {
        margin: 32px 0;
        border: none;
        border-top: 1px solid var(--border);
      }

      .footer {
        margin-top: 48px;
        padding-top: 24px;
        border-top: 1px solid var(--border);
        color: var(--muted-text);
        font-size: 13px;
        text-align: center;
      }

      @media (max-width: 768px) {
        .app {
          flex-direction: column;
        }

        .sidebar {
          width: 100%;
          padding: 16px;
          border-right: none;
          border-bottom: 1px solid var(--border);
        }

        .sidebar nav {
          position: static;
        }

        .brand {
          font-size: 18px;
          margin-bottom: 16px;
        }

        .sidebar ul {
          display: flex;
          gap: 8px;
          flex-wrap: wrap;
        }

        .sidebar li {
          margin: 0;
        }

        .sidebar a {
          padding: 8px 10px;
          font-size: 13px;
        }

        .content {
          padding: 24px 16px;
        }

        h1 {
          font-size: 28px;
        }

        h2 {
          font-size: 22px;
        }

        h3 {
          font-size: 18px;
        }
      }
    </style>
  </head>
  <body>
    <div class="app">
      <aside class="sidebar">
        <nav>
          <div class="sidebar-header">
            <h1 class="brand">My Learning</h1>
            <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">ðŸŒ™</button>
          </div>
          <ul>
            <li><a href={href('')}>Tracker</a></li>
            <li><a href={href('goals')}>Goals</a></li>
            <li><a href={href('bucket-list')}>Bucket List</a></li>
          </ul>
        </nav>
      </aside>

      <main class="content">
        <slot />
        <footer class="footer">Â© 2026 â€” My Learning Tracker</footer>
      </main>
    </div>

    <script>
      // Theme toggle functionality
      const themeToggle = document.getElementById('themeToggle');
      const htmlElement = document.documentElement;

      // Check localStorage for saved theme preference
      const savedTheme = localStorage.getItem('theme') || 'light';
      if (savedTheme === 'dark') {
        htmlElement.classList.add('dark');
        themeToggle.textContent = 'â˜€ï¸';
      }

      themeToggle.addEventListener('click', () => {
        htmlElement.classList.toggle('dark');
        const isDark = htmlElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        themeToggle.textContent = isDark ? 'â˜€ï¸' : 'ðŸŒ™';
      });

      // Checkbox functionality with localStorage persistence
      const pageKey = window.location.pathname;

      // Load checkbox states from localStorage
      const savedStates = JSON.parse(localStorage.getItem(`checkboxes-${pageKey}`) || '{}');
      document.querySelectorAll('input[type="checkbox"]').forEach((checkbox, index) => {
        const key = checkbox.id || `checkbox-${index}`;
        if (savedStates[key] !== undefined) {
          checkbox.checked = savedStates[key];
        }
      });

      // Save checkbox state when changed
      document.querySelectorAll('input[type="checkbox"]').forEach((checkbox, index) => {
        const key = checkbox.id || `checkbox-${index}`;
        checkbox.addEventListener('change', () => {
          savedStates[key] = checkbox.checked;
          localStorage.setItem(`checkboxes-${pageKey}`, JSON.stringify(savedStates));
        });
      });
    </script>
  </body>
</html>