---
const base = Astro.site?.pathname ?? "/";
const href = (path = "") => `${base}${path}`.replace(/\/+/g, "/");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>My Learning Tracker</title>
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

      :root {
        --bg: #ffffff;
        --muted: #f4f6f8;
        --text: #0b1220;
        --muted-text: #6b7280;
        --accent: #0ea5a5;
        --border: #e5e7eb;
        --max-width: 980px;
      }

      html.dark {
        --bg: #0b1220;
        --muted: #1a2332;
        --text: #f5f5f5;
        --muted-text: #a0a0a0;
        --accent: #00d9d9;
        --border: #2a3a52;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family:
          "Inter",
          system-ui,
          -apple-system,
          "Segoe UI",
          Roboto,
          "Helvetica Neue",
          Arial,
          sans-serif;
        background-color: var(--bg);
        color: var(--text);
        transition:
          background-color 250ms ease-in,
          color 250ms ease-in;
      }

      /* ===================================================
         Day/Night Toggle
         =================================================== */

      .toggle {
        display: block;
        margin: 0 0 24px 0;
        user-select: none;
      }

      .toggle--checkbox {
        display: none;
      }

      .toggle--btn {
        display: block;
        margin: 0;
        font-size: 1em;
        transition: all 350ms ease-in;
        cursor: pointer;
      }

      .toggle--btn,
      .toggle--checkbox,
      .toggle--feature {
        transition: all 250ms ease-in;
      }

      .toggle--btn:before,
      .toggle--btn:after,
      .toggle--feature:before,
      .toggle--feature:after {
        transition: all 250ms ease-in;
        content: "";
        display: block;
      }

      .toggle--daynight .toggle--btn {
        position: relative;
        height: 44px;
        width: 80px;
        border-radius: 44px;
        border: 3px solid #1c1c1c;
        background-color: #3c4145;
      }

      .toggle--daynight .toggle--btn:before {
        position: absolute;
        top: 2px;
        left: 3px;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #fff;
        border: 3px solid #e3e3c7;
      }

      .toggle--daynight .toggle--btn:after {
        position: absolute;
        top: 62%;
        left: 28px;
        z-index: 10;
        width: 7px;
        height: 7px;
        opacity: 0;
        background-color: #fff;
        border-radius: 50%;
        box-shadow:
          #fff 0 0,
          #fff 2px 0,
          #fff 4px 0,
          #fff 6px 0,
          #fff 7px 0,
          #fff 9px 0,
          #fff 10px 0,
          #fff 13px -1px 0 1px,
          #fff 10px -4px 0 -1px,
          #fff 4px -4px 0 1px,
          #d3d3d3 0 0 0 2px,
          #d3d3d3 4px 0 0 2px,
          #d3d3d3 7px 0 0 2px,
          #d3d3d3 10px 0 0 2px,
          #d3d3d3 13px -1px 0 3px,
          #d3d3d3 10px -4px 0 1px,
          #d3d3d3 4px -4px 0 3px;
        transition: opacity 100ms ease-in;
      }

      @keyframes starry_star {
        50% {
          background-color: rgba(255, 255, 255, 0.1);
          box-shadow:
            #fff 19px -2px 0 0,
            #fff 8px 6px 0 -1px,
            rgba(255, 255, 255, 0.1) 24px 11px 0 1px,
            #fff 20px 21px 0 0,
            rgba(255, 255, 255, 0.1) 13px 15px 0 -1px,
            #fff 3px 24px 0 1px;
        }
      }

      @keyframes bounceIn {
        0% {
          opacity: 0;
          transform: scale(0.3);
        }
        50% {
          opacity: 100;
          transform: scale(1.1);
        }
        55% {
          transform: scale(1.1);
        }
        75% {
          transform: scale(0.9);
        }
        100% {
          opacity: 100;
          transform: scale(1);
        }
      }

      .toggle--daynight .toggle--feature {
        display: block;
        position: absolute;
        top: 6px;
        left: 52.5%;
        z-index: 20;
        width: 2.5px;
        height: 2.5px;
        border-radius: 50%;
        background-color: #fff;
        box-shadow:
          rgba(255, 255, 255, 0.1) 19px -2px 0 0,
          rgba(255, 255, 255, 0.1) 8px 6px 0 -1px,
          #fff 24px 11px 0 1px,
          rgba(255, 255, 255, 0.1) 20px 21px 0 0,
          #fff 13px 15px 0 -1px,
          rgba(255, 255, 255, 0.1) 3px 24px 0 1px;
        animation: starry_star 5s ease-in-out infinite;
      }

      .toggle--daynight .toggle--feature:before {
        position: absolute;
        top: -1px;
        left: -16px;
        width: 11px;
        height: 11px;
        background-color: #fff;
        border-radius: 50%;
        border: 3px solid #e3e3c7;
        box-shadow:
          #e3e3c7 -18px 0 0 -2px,
          #e3e3c7 -5px 15px 0 -1px;
        transform-origin: -4px 80%;
      }

      /* Checked state - Day mode */
      .toggle--daynight .toggle--checkbox:checked + .toggle--btn {
        background-color: #9ee3fb;
        border: 3px solid #86c3d7;
      }

      .toggle--daynight .toggle--checkbox:checked + .toggle--btn:before {
        left: 39px;
        background-color: #ffdf6d;
        border: 3px solid #e1c348;
      }

      .toggle--daynight .toggle--checkbox:checked + .toggle--btn:after {
        opacity: 100;
        animation-name: bounceIn;
        animation-duration: 0.6s;
        animation-delay: 0.1s;
        animation-fill-mode: backwards;
        animation-timing-function: ease-in-out;
      }

      .toggle--daynight
        .toggle--checkbox:checked
        + .toggle--btn
        > .toggle--feature {
        opacity: 0;
        box-shadow:
          rgba(255, 255, 255, 0.1) 19px -2px 0 -3px,
          rgba(255, 255, 255, 0.1) 8px 6px 0 -4px,
          #fff 24px 11px 0 -2px,
          rgba(255, 255, 255, 0.1) 20px 21px 0 -3px,
          #fff 13px 15px 0 -4px,
          rgba(255, 255, 255, 0.1) 3px 24px 0 -2px;
        animation: none;
      }

      .toggle--daynight
        .toggle--checkbox:checked
        + .toggle--btn
        > .toggle--feature:before {
        left: 16px;
        transform: rotate(70deg);
      }

      /* ===================================================
         Layout
         =================================================== */

      .app {
        display: flex;
        min-height: 100vh;
        background: var(--bg);
      }

      .sidebar {
        width: 220px;
        padding: 28px 20px;
        border-right: 1px solid var(--border);
        background: var(--muted);
        overflow-y: auto;
        position: sticky;
        top: 0;
        height: 100vh;
        flex-shrink: 0;
      }

      .sidebar nav {
        position: static;
      }

      .brand {
        font-size: 20px;
        font-weight: 700;
        margin: 0 0 20px 0;
        color: var(--text);
        letter-spacing: -0.5px;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar li {
        margin: 4px 0;
      }

      .sidebar a {
        display: block;
        padding: 10px 12px;
        color: var(--text);
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
      }

      .sidebar a:hover {
        background-color: rgba(14, 165, 165, 0.1);
        color: var(--accent);
      }

      .content {
        flex: 1;
        padding: 48px 40px;
        max-width: var(--max-width);
        margin: 0 auto;
        overflow-y: auto;
      }

      article {
        line-height: 1.6;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        margin-top: 32px;
        margin-bottom: 16px;
        font-weight: 700;
        letter-spacing: -0.3px;
      }

      h1 {
        font-size: 36px;
        line-height: 1.2;
        margin-top: 0;
      }

      h2 {
        font-size: 28px;
        line-height: 1.3;
        color: var(--text);
      }

      h3 {
        font-size: 22px;
        line-height: 1.4;
        color: var(--text);
      }

      p {
        font-size: 15px;
        line-height: 1.7;
        color: var(--text);
        margin: 16px 0;
      }

      a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid rgba(14, 165, 165, 0.3);
        transition: all 150ms ease;
      }

      a:hover {
        border-bottom-color: var(--accent);
        background-color: rgba(14, 165, 165, 0.05);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: 24px 0;
        font-size: 14px;
      }

      th,
      td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid var(--border);
      }

      th {
        background-color: var(--muted);
        font-weight: 600;
      }

      tr:hover {
        background-color: rgba(14, 165, 165, 0.03);
      }

      input[type="checkbox"] {
        cursor: pointer;
        accent-color: var(--accent);
      }

      blockquote {
        margin: 24px 0;
        padding-left: 20px;
        border-left: 4px solid var(--accent);
        color: var(--muted-text);
        font-style: italic;
      }

      code {
        background: var(--muted);
        padding: 2px 6px;
        border-radius: 4px;
        font-family: "Monaco", "Courier New", monospace;
        font-size: 13px;
        color: #d73a49;
      }

      pre {
        background: var(--muted);
        padding: 16px;
        border-radius: 8px;
        overflow-x: auto;
        margin: 24px 0;
      }

      pre code {
        background: none;
        padding: 0;
        color: var(--text);
      }

      ul,
      ol {
        margin: 16px 0;
        padding-left: 24px;
      }

      li {
        margin: 8px 0;
      }

      hr {
        margin: 32px 0;
        border: none;
        border-top: 1px solid var(--border);
      }

      .footer {
        margin-top: 48px;
        padding-top: 24px;
        border-top: 1px solid var(--border);
        color: var(--muted-text);
        font-size: 13px;
        text-align: center;
      }

      @media (max-width: 768px) {
        .app {
          flex-direction: column;
        }

        .sidebar {
          width: 100%;
          padding: 16px;
          border-right: none;
          border-bottom: 1px solid var(--border);
          position: static;
          height: auto;
        }

        .brand {
          font-size: 18px;
          margin-bottom: 16px;
        }

        .toggle--daynight .toggle--btn {
          height: 38px;
          width: 70px;
        }

        .toggle--daynight .toggle--btn:before {
          width: 28px;
          height: 28px;
        }

        .toggle--daynight .toggle--checkbox:checked + .toggle--btn:before {
          left: 34px;
        }

        .sidebar ul {
          display: flex;
          gap: 8px;
          flex-wrap: wrap;
        }

        .sidebar li {
          margin: 0;
        }

        .sidebar a {
          padding: 8px 10px;
          font-size: 13px;
        }

        .content {
          padding: 24px 16px;
        }

        h1 {
          font-size: 28px;
        }

        h2 {
          font-size: 22px;
        }

        h3 {
          font-size: 18px;
        }
      }
    </style>
  </head>
  <body>
    <div class="app">
      <aside class="sidebar">
        <nav>
          <h1 class="brand">My Learning</h1>

          <div class="toggle toggle--daynight">
            <input
              type="checkbox"
              id="toggle--daynight"
              class="toggle--checkbox"
            />
            <label class="toggle--btn" for="toggle--daynight">
              <span class="toggle--feature"></span>
            </label>
          </div>

          <ul>
            <li><a href={href("")}>Tracker</a></li>
            <li><a href={href("goals")}>Goals</a></li>
            <li><a href={href("bucket-list")}>Bucket List</a></li>
          </ul>
        </nav>
      </aside>

      <main class="content">
        <slot />
        <footer class="footer">© 2026 — My Learning Tracker</footer>
      </main>
    </div>

    <script>
      // Theme toggle functionality with day/night switch
      const themeToggle = document.getElementById("toggle--daynight");
      const htmlElement = document.documentElement;

      // Check for saved theme preference (inverted logic: checked = light, unchecked = dark)
      const savedTheme = localStorage.getItem("theme") || "light";
      if (savedTheme === "light") {
        htmlElement.classList.remove("dark");
        themeToggle.checked = true;
      } else {
        htmlElement.classList.add("dark");
        themeToggle.checked = false;
      }

      // Toggle theme when checkbox changes
      themeToggle.addEventListener("change", () => {
        if (themeToggle.checked) {
          htmlElement.classList.remove("dark");
          localStorage.setItem("theme", "light");
        } else {
          htmlElement.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }
      });

      // Checkbox functionality with localStorage persistence
      const pageKey = window.location.pathname;

      // Load checkbox states from localStorage
      const savedStates = JSON.parse(
        localStorage.getItem(`checkboxes-${pageKey}`) || "{}"
      );
      document
        .querySelectorAll('input[type="checkbox"]:not(#toggle--daynight)')
        .forEach((checkbox, index) => {
          const key = checkbox.id || `checkbox-${index}`;
          if (savedStates[key] !== undefined) {
            checkbox.checked = savedStates[key];
          }
        });

      // Save checkbox state when changed (excluding theme toggle)
      document
        .querySelectorAll('input[type="checkbox"]:not(#toggle--daynight)')
        .forEach((checkbox, index) => {
          const key = checkbox.id || `checkbox-${index}`;
          checkbox.addEventListener("change", () => {
            savedStates[key] = checkbox.checked;
            localStorage.setItem(
              `checkboxes-${pageKey}`,
              JSON.stringify(savedStates)
            );
          });
        });
    </script>
  </body>
</html>
